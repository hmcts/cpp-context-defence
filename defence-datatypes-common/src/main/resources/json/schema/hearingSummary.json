{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://moj.gov.uk/cpp/defence/query/hearing/api/hearingSummary.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "type": {
      "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
    },
    "hasSharedResults": {
      "type": "boolean"
    },
    "hearingDays": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/hearingDay.json"
      }
    },
    "hearingLanguage": {
      "$ref": "http://justice.gov.uk/core/courts/hearingLanguage.json"
    },
    "jurisdictionType": {
      "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
    },
    "courtApplicationSummaries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/courtApplicationSummary"
      }
    },
    "prosecutionCaseSummaries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/prosecutionCaseSummary"
      }
    },
    "courtCentre": {
      "$ref": "http://justice.gov.uk/core/courts/courtCentre.json"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "prosecutionCaseSummary": {
      "id": "http://moj.gov.uk/cpp/defence/query/hearing/api/prosecutionCaseSummary.json",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "prosecutionCaseIdentifier": {
          "$ref": "http://justice.gov.uk/core/courts/prosecutionCaseIdentifier.json"
        },
        "defendants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/defendants"
          }
        }
      }
    },
    "defendants": {
      "id": "http://moj.gov.uk/cpp/defence/query/hearing/api/defendants.json",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "masterDefendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "courtProceedingsInitiated": {
          "type": "string",
          "format": "date-time"
        },
        "synonym": {
          "type": "string"
        },
        "firstName": {
          "description": "The person forename",
          "type": "string"
        },
        "middleName": {
          "description": "The person middle name",
          "type": "string"
        },
        "dateOfBirth": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "lastName": {
          "description": "The person last name",
          "type": "string"
        },
        "organisationName": {
          "description": "The organisation name",
          "type": "string"
        },
        "offences": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/offenceSummary"
          }
        }
      }
    },
    "offenceSummary": {
      "id": "http://moj.gov.uk/cpp/defence/query/hearing/api/offenceSummary.json",
      "type": "object",
      "description": "Information about the offences committed by a party",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "offenceTitle": {
          "type": "string"
        },
        "offenceTitleWelsh": {
          "type": "string"
        },
        "wording": {
          "type": "string"
        },
        "wordingWelsh": {
          "type": "string"
        },
        "reportingRestrictions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/reportingRestriction"
          }
        }
      },
      "required": [
        "id"
      ],
      "additionalProperties": false
    },
    "reportingRestriction": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "judicialResultId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "label": {
          "type": "string"
        },
        "orderedDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        }
      },
      "required": [
        "id",
        "label"
      ],
      "additionalProperties": false
    },
    "courtApplicationSummary": {
      "id": "http://moj.gov.uk/cpp/defence/query/hearing/api/courtApplicationSummary.json",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "applicationReference": {
          "type": "string"
        },
        "caseSummaries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/courtApplicationCaseSummary"
          }
        },
        "applicant": {
          "$ref": "#/definitions/courtApplicationPartySummary"
        },
        "respondents": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/courtApplicationPartySummary"
          }
        },
        "subject": {
          "$ref": "#/definitions/courtApplicationPartySummary"
        },
        "type": {
          "id": "http://moj.gov.uk/cpp/defence/query/hearing/api/type.json",
          "description": "The type of application made to court for judicial decision.  Taken from reference data",
          "type": "object",
          "properties": {
            "type": {
              "description": "The CJS Title for the court application type",
              "type": "string"
            },
            "typeWelsh": {
              "type": "string"
            },
            "legislation": {
              "type": "string"
            }
          }
        }
      }
    },
    "courtApplicationPartySummary": {
      "id": "http://moj.gov.uk/cpp/defence/query/hearing/api/courtApplicationPartySummary.json",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "firstName": {
          "description": "The person forename",
          "type": "string"
        },
        "middleName": {
          "description": "The person middle name",
          "type": "string"
        },
        "lastName": {
          "description": "The person last name",
          "type": "string"
        },
        "organisationName": {
          "description": "The organisation name",
          "type": "string"
        }
      }
    },
    "courtApplicationCaseSummary": {
      "id": "http://moj.gov.uk/cpp/defence/query/hearing/api/courtApplicationCaseSummary.json",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "prosecutionCaseIdentifier": {
          "$ref": "http://justice.gov.uk/core/courts/prosecutionCaseIdentifier.json"
        }
      }
    }
  }
}


