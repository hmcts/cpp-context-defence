{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://moj.gov.uk/cpp/defence/events/defence.events.cases-assigned-to-advocate.json",
  "type": "object",
  "properties": {
    "caseHearingAssignments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "caseId": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          },
          "hearingId": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          },
          "prosecutingAuthorityId": {
            "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
          },
          "isCps": {
            "type": "boolean"
          },
          "isPolice": {
            "type": "boolean"
          }
        },
        "required": [
          "caseId",
          "hearingId",
          "prosecutingAuthorityId"
        ]
      }
    },
    "assigneeOrganisation": {
      "$ref": "http://moj.gov.uk/cpp/defence/organisation.json"
    },
    "assigneeDetails": {
      "$ref": "http://justice.gov.uk/cps/defence/person-details.json"
    },
    "assignorDetails": {
      "$ref": "http://justice.gov.uk/cps/defence/person-details.json"
    },
    "assignorOrganisation": {
      "$ref": "http://moj.gov.uk/cpp/defence/organisation.json"
    },
    "assignmentTimestamp": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/date-time"
    },
    "representingOrganisation": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "caseHearingAssignments",
    "assigneeOrganisation",
    "assigneeDetails",
    "assignorDetails",
    "assignorOrganisation",
    "assignmentTimestamp",
    "representingOrganisation"
  ]
}