{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/cps/defence/hearings-timeline",
  "type": "object",
  "properties": {
    "hearingSummaries": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/hearingSummary"
      }
    },
    "unallocatedHearings": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/listing/events/hearing.json"
      }
    }
  },
  "definitions": {
    "hearingSummary": {
      "type": "object",
      "properties": {
        "hearingId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "hearingDate": {
          "type": "string"
        },
        "hearingType": {
          "type": "string"
        },
        "courtHouse": {
          "type": "string"
        },
        "courtRoom": {
          "type": "string"
        },
        "hearingTime": {
          "type": "string"
        },
        "startTime": {
          "type": "string"
        },
        "estimatedDuration": {
          "type": "integer"
        },
        "defendants": {
          "type": "array",
          "items": {
            "$ref": "http://moj.gov.uk/cpp/hearing/defendant.json"
          }
        },
        "applications": {
          "type": "array",
          "items": {
            "$ref": "http://moj.gov.uk/cpp/hearing/application.json"
          }
        },
        "outcome": {
          "type": "string"
        },
        "isBoxHearing": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}


