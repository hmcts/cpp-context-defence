{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/cps/defence/defence.query.search-client-by-criteria.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "firstName": {
      "description": "The defence clients first name",
      "type": "string"
    },
    "lastName": {
      "description": "The defence clients last name",
      "type": "string"
    },
    "dateOfBirth": {
      "description": "The defence clients DOB",
      "type": "string",
      "format": "date"
    },
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "idpcDetailsId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "associatedOrganisation": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "lastAssociatedOrganisation": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    }
  },
  "additionalProperties": false,
  "required": [
    "urn",
    "firstName",
    "lastName",
    "dateOfBirth"
  ]
}