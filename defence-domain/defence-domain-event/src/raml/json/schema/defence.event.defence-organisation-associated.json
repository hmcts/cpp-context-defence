{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://moj.gov.uk/cpp/defence/events/defence.event.defence-organisation-associated.json",
  "type": "object",
  "properties": {
    "userId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "defendantId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "organisationId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "organisationName": {
      "type": "string"
    },
    "representationType": {
      "type": "string",
      "enum": [
        "REPRESENTATION_ORDER",
        "REPRESENTATION_ORDER_APPLIED_FOR",
        "COURT_APPOINTED",
        "PRO_BONO",
        "PRIVATE"
      ]
    },
    "laaContractNumber": {
      "type": "string"
    },
    "startDate": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/date-time"
    },
    "permissions": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/cps/defence/permission.json"
      }
    },
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "isLAA" : {
      "type": "boolean"
    },
    "legalAidStatus" : {
      "type": "string"
    }
  },
  "required": [
    "defendantId",
    "organisationId",
    "organisationName",
    "representationType",
    "startDate",
    "permissions"
  ]
}