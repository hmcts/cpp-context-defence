<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="011-add-idpc-access" author="Joao">
        <createTable tableName="idpc_access_history">
            <column name="defence_client_id" type="UUID"/>
            <column name="idpc_id" type="UUID"/>
            <column name="user_id" type="UUID"/>
            <column name="organisation_id" type="UUID"/>
            <column name="access_timestamp" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>

        <createIndex tableName="idpc_access_history" indexName="idpc_access_history_defence_client_id_idx">
            <column name="defence_client_id"/>
        </createIndex>

        <createIndex tableName="idpc_access_history" indexName="idpc_access_history_idpc_id_idx">
            <column name="idpc_id"/>
        </createIndex>

        <createIndex tableName="idpc_access_history" indexName="idpc_access_history_organisation_id_idx">
            <column name="organisation_id"/>
        </createIndex>

        <createIndex tableName="idpc_access_history" indexName="idpc_access_history_access_timestamp_idx">
            <column name="access_timestamp"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>