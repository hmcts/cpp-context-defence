<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="036-create-prosecution_advocate_access" author="Natraj">

        <createTable tableName="prosecution_advocate_access">
            <column name="id" type="UUID"/>
            <column name="case_id" type="UUID"/>
            <column name="assignee_organisation_id" type="UUID"/>
            <column name="assignee_id" type="UUID"/>

            <column name="assignor_id" type="UUID"/>
            <column name="assignor_organisation_id" type="UUID"/>
            <column name="assignor_organisation_name" type="TEXT"/>

            <column name="assigned_date" type="DATETIME"/>
            <column name="removed_date" type="DATETIME"/>
            <column name="removed_by" type="UUID"/>
        </createTable>

        <addPrimaryKey columnNames="id" constraintName="pk_prosecution_advocate_access"
                       tableName="prosecution_advocate_access"/>

        <createIndex tableName="prosecution_advocate_access" indexName="prosecution_advocate_access_case_id_idx">
            <column name="case_id"/>
        </createIndex>

        <createIndex tableName="prosecution_advocate_access" indexName="prosecution_advocate_access_assignee_organisation_id_idx">
            <column name="assignee_organisation_id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>