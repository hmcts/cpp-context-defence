<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="012-create-idpc-details" author="Prasad">

        <createTable tableName="idpc_details">
            <column name="id" type="UUID"/>
            <column name="defence_client_id" type="UUID"/>
            <column name="material_id" type="UUID"/>
            <column name="size" type="TEXT"/>
            <column name="document_name" type="TEXT"/>
            <column name="published_date" type="DATE"/>
            <column name="page_count" type="INTEGER"/>
        </createTable>

        <createIndex tableName="idpc_details" indexName="idpc_details_defence_client_id_idx">
            <column name="defence_client_id"/>
        </createIndex>

        <createIndex tableName="idpc_details" indexName="idpc_details_id_idx">
            <column name="id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>