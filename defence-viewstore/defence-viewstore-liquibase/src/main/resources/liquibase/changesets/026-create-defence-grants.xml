<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="026-create-defence-grants" author="defence-uplift">

        <createTable tableName="organisation_details">
            <column name="id" type="UUID"/>
            <column name="organisation_id" type="UUID"/>
            <column name="name" type="TEXT"/>
        </createTable>

        <addPrimaryKey columnNames="id" constraintName="pk_organisation_details"
                       tableName="organisation_details"/>


        <createTable tableName="defence_user_details">
            <column name="id" type="UUID"/>
            <column name="user_id" type="UUID"/>
            <column name="first_name" type="TEXT"/>
            <column name="last_name" type="TEXT"/>
        </createTable>

        <addPrimaryKey columnNames="id" constraintName="pk_defence_user_details"
                       tableName="defence_user_details"/>

       <createTable tableName="defence_grant_access">
            <column name="id" type="UUID"/>
            <column name="grantee_id" type="UUID"/>
            <column name="grantee_organisation_id" type="UUID"/>
            <column name="grantor_id" type="UUID"/>
            <column name="defence_client_id" type="UUID"/>
            <column name="grantee_objective" type="TEXT"/>
            <column name="grantee_action" type="TEXT"/>
            <column name="grantee_access_start_date" type="date"/>
            <column name="grantee_access_end_date" type="date"/>
           <column name="agent_flag" type="boolean" defaultValue="false" />
           <column name="is_removed" type="boolean" defaultValue="false" />
        </createTable>

        <addPrimaryKey columnNames="id" constraintName="pk_defence_grant_access_id"
                       tableName="defence_grant_access"/>
    </changeSet>

</databaseChangeLog>
