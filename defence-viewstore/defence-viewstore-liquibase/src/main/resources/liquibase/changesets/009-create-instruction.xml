<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="009-create-instruction" author="Sachin">
        <createTable tableName="instruction">
            <column name="id" type="UUID"/>
            <column name="user_id" type="UUID"/>
            <column name="organisation_id" type="UUID"/>
            <column name="defence_client_id" type="UUID"/>
            <column name="instruction_date" type="Date"/>
            <column name="created_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <createIndex tableName="instruction" indexName="instruction_defence_client_id_idx">
            <column name="defence_client_id"/>
        </createIndex>

        <createIndex tableName="instruction" indexName="instruction_id_idx">
            <column name="id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
